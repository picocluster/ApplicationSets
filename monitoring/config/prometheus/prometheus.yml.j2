# Prometheus Configuration for PicoCluster Monitoring
# Managed by Ansible - modify via playbook variables

global:
  scrape_interval: 15s           # Default scrape interval
  evaluation_interval: 15s       # How frequently to evaluate rules
  external_labels:
    cluster: 'picocluster'
    monitor: 'prometheus-monitor'

# Alertmanager configuration
alerting:
  alertmanagers:
    - static_configs:
        - targets: []

# Load rules once and periodically evaluate them
rule_files: []

scrape_configs:
  # Prometheus monitoring itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
        labels:
          instance: 'prometheus-monitoring'
          component: 'monitoring'

  # Node Exporter - collect system metrics from all nodes
  - job_name: 'node'
    static_configs:
      # Monitoring node itself
      - targets: ['localhost:9100']
        labels:
          node: 'monitoring-node'
          role: 'monitoring'
          arch: 'arm64'

    # Additional nodes can be added here by Ansible
    # Format: - targets: ['<node-ip>:9100']
    #          labels:
    #            node: '<node-name>'
    #            role: 'cluster'

  # Docker metrics (if Docker is installed)
  - job_name: 'docker'
    static_configs:
      - targets: ['localhost:9323']
        labels:
          component: 'docker'
    metrics_path: '/metrics'
    scrape_interval: 15s
    scrape_timeout: 10s

  # Kubernetes metrics (if K3s/K8s is installed)
  - job_name: 'kubernetes-apiservers'
    kubernetes_sd_configs:
      - role: endpoints
    scheme: https
    tls_config:
      ca_file: /var/run/secrets/kubernetes.io/serviceaccount/ca.crt
    bearer_token_file: /var/run/secrets/kubernetes.io/serviceaccount/token
    relabel_configs:
      - source_labels: [__meta_kubernetes_namespace, __meta_kubernetes_service_name, __meta_kubernetes_endpoint_port_name]
        action: keep
        regex: default;kubernetes;https
    retry_on_http_429: true
